<xsp:page language="java" xmlns:xsp="http://apache.org/xsp" xmlns:sdx="http://www.culture.gouv.fr/ns/sdx/sdx">
    <sdx:page langSession="lang" langParam="lang">
        <bar/>
        <title id="title.login"/>
        <xsp:logic>
			<!-- première entrée sur la page -->
            if (request.getParameter("id")== null) {<rights/>}
        </xsp:logic>
        <login/>
        <sdx:login>
			<identified/>
            <sdx:fallback>
                <xsp:logic>
                    <!-- on essaye de rentrer -->
                if (request.getParameter("id")!= null) {<anonymous/>}
                </xsp:logic>
            </sdx:fallback>
        </sdx:login>
        <sdx:logout/>
        <sdx:userIsMember group="admins">
            <admin/>
			<xsp:logic>
				if (request.getParameter("id")!=null)
				{
            		<link show="replace" actuate="onload" time="0" href="admin.xsp"/>
				}
			</xsp:logic>
            <sdx:fallback>
                <xsp:logic>
                    <!-- on essaye de rentrer -->
                if (request.getParameter("id")!= null) {<notadmin/>}
                </xsp:logic>
            </sdx:fallback>
        </sdx:userIsMember>
    </sdx:page>
</xsp:page>
